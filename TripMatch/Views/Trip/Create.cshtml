@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "建立新行程";
    Layout = "~/Views/Shared/_Layout-copy.cshtml";
}

@* 1. 頁面專屬 CSS 區塊 *@
@section Styles {
    <link rel="stylesheet" href="~/css/trip/createTrip.css" />
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-10 col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm p-4 p-md-5 bg-white rounded-3">
                <h2 class="mb-4 fw-bold">建立行程</h2>

                <form id="tripForm">
                    <div class="mb-4">
                        <label class="form-label text-danger-emphasis small"><span id="required">*</span>行程名稱</label>
                        <input type="text" id="title" class="form-control form-control-lg" placeholder="請輸入您的行程名稱">
                    </div>

                    <div class="mb-4" style="position: relative;">
                        <label class="form-label text-danger-emphasis small"><span id="required">*</span>目的地</label>
                        <div id="input-wrapper" class="form-control d-flex flex-wrap gap-2 align-items-center" style="cursor: text; min-height: 50px;">
                            <input type="text" id="search-input" class="border-0 flex-grow-1" style="outline:none; min-width: 150px; background: transparent;" placeholder="搜尋並選擇區域 (如：東京)" autocomplete="off">
                        </div>
                        <div id="suggestions" class="list-group shadow-sm position-absolute w-100 mt-1" style="z-index: 1050; display: none; max-height: 300px; overflow-y: auto;"></div>
                    </div>

                    <div class="mb-5">
                        <label class="form-label text-danger-emphasis small"><span id="required">*</span>日期</label>
                        <div class="d-flex align-items-center gap-2">
                            <input type="date" id="startDate" class="form-control" value="2026-01-01">
                            <span>~</span>
                            <input type="date" id="endDate" class="form-control" value="2026-01-01">
                        </div>
                    </div>

                    <div class="d-flex justify-content-end align-items-center gap-3">
                        <a asp-controller="Trip" asp-action="Index" class="btn btn_Gray">取消</a>
                        <button type="button" id="btnSave" class="btn btn_light px-5 py-2">完成</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {

    <script src="~/js/trip/createTrip.js" asp-append-version="true"></script>


    <!-- 使用官方 loader，透過 Razor 注入 Key-->
    <script src="https://maps.googleapis.com/maps/api/js?key=@Configuration["GoogleMaps:ApiKey"]&libraries=places&callback=initMap" async defer></script>

}
