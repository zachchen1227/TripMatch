@{
    ViewData["Title"] = "忘記密碼";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="forgot_wrap">
    <h1 class="titleH1 mb-4">忘記密碼</h1>

    <!-- 步驟指示器：起始皆未完成 -->
    <div class="step_indicators mb-5">
        <div class="step_item step_incomplete" id="step1_indicator">
            <div class="step_badge"><span class="step_number">1</span></div>
            <div class="step_label">驗證帳號</div>
        </div>
        <div class="step_item step_incomplete" id="step2_indicator">
            <div class="step_badge"><span class="step_number">2</span></div>
            <div class="step_label">重設密碼</div>
        </div>
        <div class="step_item step_incomplete" id="step3_indicator">
            <div class="step_badge"><span class="step_number">3</span></div>
            <div class="step_label">返回登入</div>
        </div>
    </div>

    <div class="formWrap">
        <!-- Step 1: 輸入 Email -->
        <div id="step1_content">
            <div class="text_start_align mx-auto forgot_form">
                <label class="fw-bold d-flex align-items-center gap-2 mb-3">
                    <i class="bi bi-person fs-3"></i> 輸入帳號
                </label>
                <div class="input_row">
                    <!-- 修正：加入 flex-grow-1 讓輸入框區塊填滿剩餘空間 -->
                    <div class="input_group_custom flex-grow-1">
                        <input id="email" class="input_custom" type="email" placeholder="example@gmail.com" style="width: 100%;">
                    </div>
                    <button type="button" class="btn_send_verify" id="btn_send_reset" disabled>寄驗證信</button>
                </div>
                <div id="emailHint" class="inputHint mt-2"></div>

                <div class="alert_custom mt-4 d-none" id="custom_alert">
                    <i class="bi bi-bell fs-4"></i>
                    <div>
                        <strong>我們向您發送了一封驗證信。</strong>
                        <br>
                        <small class="text-muted">請點擊信中的連結驗證您的帳號。</small>
                    </div>
                </div>

                <!-- 原本的 resend_wrap 改為僅顯示提示 -->
                <div class="mt-3 text-center d-none" id="resend_wrap">
                    <div class="small text-muted mt-2" id="resend_hint"></div>
                </div>
                <div><a href="@Url.Action("ForgotEmail", "Auth")">備援信箱找回帳號</a></div>
                <!-- 下一步：需已完成驗證才可按 -->
                <button type="button" class="btn_next_step mt-4" id="btn_next_step" disabled>下一步</button>
            </div> <!-- ★ 補上這個缺失的 div (結束 forgot_form) -->
        </div> <!-- 結束 step1_content -->

        <!-- Step 2: 重設密碼 -->
        <div id="step2_content" class="d-none">
            <div class="mx-auto forgot_form">
                <div class="mb-4 text_start_align">
                    <label class="fw-bold mb-3 d-block">
                        <i class="bi bi-lock me-2"></i>重設密碼
                    </label>
                    <div class="input_group_custom position-relative">
                        <input type="password" id="new_password" class="input_custom" placeholder="6 到 18 位密碼和大小寫英文">
                        <span class="btn-toggle-pwd" data-target="#new_password" role="button" style="cursor: pointer;">
                            <img src="~/img/eye-closed.svg" alt="顯示密碼">
                        </span>
                    </div>
                    <div id="new_password_hint" class="inputHint mt-2"></div>
                </div>
                
                <div class="mb-4 text_start_align">
                    <label class="fw-bold mb-3 d-block">
                        <i class="bi bi-lock me-2"></i>確認密碼
                    </label>
                    <div class="input_group_custom position-relative">
                        <input type="password" id="confirm_new_password" class="input_custom" placeholder="請重複輸入確認密碼">
                        <span class="btn-toggle-pwd" data-target="#confirm_new_password" role="button" tabindex="-1" style="cursor: pointer;">
                            <img src="~/img/eye-closed.svg" alt="顯示密碼">
                        </span>
                    </div>
                    <div id="confirm_new_password_hint" class="inputHint mt-2"></div>
                </div>

                <button type="button" class="btn_send_verify w-100 py-3" id="btn_reset_password" style="font-size: var(--font_H5);" disabled>重設密碼</button>
            </div>
        </div>

        <!-- Step 3: 完成 -->
        <div id="step3_content" class="d-none text-center">
            <div class="mb-5">
                <div class="display-1 text-success mb-3">✓</div>
                <h3>密碼重設成功</h3>
                <p class="text-muted">您現在可以使用新密碼登入。</p>
            </div>
            <a href="@Url.Action("Login", "Auth")" class="btn_send_verify" style="display: inline-block; text-decoration: none;">
                返回登入
            </a>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/js/AuthApi/forgotPassword.js" asp-append-version="true"></script>
    <script>
        $(function () {
            if (typeof bindPasswordToggle === 'function') {
                bindPasswordToggle();
            }
        });
    </script>
}