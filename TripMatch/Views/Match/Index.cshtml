@{
    ViewData["Title"] = "時間媒合";
    Layout = "~/Views/Shared/_Layout-copy.cshtml";
}

<style>
    :root {
        --bg: #f3f6fb;
        --card: #ffffff;
        --text: #111827;
        --muted: #6b7280;
        --line: #e5e7eb;
        --shadow: 0 10px 25px rgba(17, 24, 39, .08);
        --green: #16a34a;
        --green-100: #eaf7ee;
        --blue-100: #e6f0ff;
        --blue-500: #2563eb;
        --disabled: #d1d5db;
    }

    body {
        background: var(--bg);
        color: var(--text);
    }

    .form-floating > .form-control {
        border: 1px solid var(--line);
        border-radius: 8px;
        background: #fff;
        height: 58px;
    }

        .form-floating > .form-control:focus {
            border-color: #93c5fd;
            box-shadow: 0 0 0 3px rgba(147, 197, 253, .35);
        }

    .form-floating > label {
        color: var(--muted);
        padding-left: 12px;
    }

    .page-wrap {
        min-height: 80vh;
        display: flex;
        flex-direction: column;
    }

    .topbar {
        padding: 18px 0;
        display: flex;
        align-items: center;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #374151;
        text-decoration: none;
        font-size: 14px;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: var(--blue-500);
        }

        .back-link svg {
            width: 18px;
            height: 18px;
        }

    .header-section {
        padding: 18px 24px 30px;
        text-align: center;
    }

        .header-section h1 {
            margin: 0;
            font-size: 36px;
            font-weight: 800;
            color: var(--text);
            letter-spacing: 2px;
        }

        .header-section p {
            margin: 10px 0 0;
            color: var(--muted);
            font-size: 15px;
        }

    .cards-grid {
        width: min(1100px, 92vw);
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 32px;
        padding-bottom: 28px;
    }

    .custom-card {
        background: var(--card);
        border: 0;
        border-radius: 14px;
        box-shadow: var(--shadow);
        padding: 30px;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .card-head {
        display: flex;
        align-items: center;
        gap: 14px;
        margin-bottom: 20px;
    }

    .icon-circle {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        display: grid;
        place-items: center;
        flex-shrink: 0;
    }

        .icon-circle.blue {
            background: var(--blue-100);
        }

        .icon-circle.green {
            background: #dcfce7;
        }

    .card-title-text {
        font-size: 22px;
        font-weight: 700;
        margin: 0;
        color: var(--text);
    }

    .desc {
        margin: 0 0 24px;
        color: var(--muted);
        font-size: 14px;
        line-height: 1.6;
    }

    .hint-box {
        border: 1px solid #bfe8cc;
        background: var(--green-100);
        color: #14532d;
        border-radius: 10px;
        padding: 14px 14px;
        font-size: 13px;
        line-height: 1.6;
        margin-bottom: 24px;
    }

    .custom-btn {
        width: 100%;
        margin-top: auto;
        border: none;
        border-radius: 10px;
        padding: 12px 14px;
        font-size: 15px;
        font-weight: 700;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s;
    }

        .custom-btn:active {
            transform: translateY(1px);
        }

    .btn-create {
        background: var(--green);
        color: #fff;
    }

        .btn-create:hover {
            filter: brightness(0.95);
            color: #fff;
        }

    .btn-join {
        background: var(--blue-500);
        color: #fff;
    }

        .btn-join:hover {
            filter: brightness(0.95);
            color: #fff;
        }

    .btn-disabled {
        background: var(--disabled);
        color: #f9fafb;
        cursor: not-allowed;
    }

    @@media (max-width: 860px) {
        .cards-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-wrap">

    <div class="container">
        <div class="topbar">
            <a class="back-link" href="@Url.Action("Index", "Home")">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M15 18l-6-6 6-6"></path>
                </svg>
                回首頁
            </a>
        </div>
    </div>

    <div class="header-section">
        <h1>時間媒合</h1>
        <p>選擇加入現有團隊或建立新團隊</p>
    </div>

    <div class="cards-grid">

        <div class="custom-card">
            <div class="card-head">
                <div class="icon-circle blue">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#2563eb" stroke-width="2">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <h2 class="card-title-text">我有邀請碼</h2>
            </div>

            <p class="desc">已經有朋友建立團隊了嗎？輸入邀請碼加入他們。</p>

            <form id="joinForm" style="margin-top: auto;">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control text-uppercase fw-bold"
                           id="inviteCode" placeholder="例如：AB1234" maxlength="10" required
                           style="letter-spacing: 1px;">
                    <label for="inviteCode">輸入邀請碼</label>
                </div>

                <button type="submit" class="btn custom-btn btn-disabled" id="btnJoin" disabled>
                    加入團隊
                </button>
            </form>
        </div>

        <div class="custom-card">
            <div class="card-head">
                <div class="icon-circle green">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#16a34a" stroke-width="2">
                        <path d="M12 5v14"></path>
                        <path d="M5 12h14"></path>
                    </svg>
                </div>
                <h2 class="card-title-text">我沒有邀請碼</h2>
            </div>

            <p class="desc">建立一個新的團隊，並邀請朋友一起規劃行程。</p>

            <div class="hint-box">
                建立團隊後，系統會產生一組邀請碼，你可以分享給朋友加入。
            </div>

            <a href="@Url.Action("Create", "Match")" class="btn custom-btn btn-create">
                建立新團
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        const inviteInput = document.getElementById('inviteCode');
        const btnJoin = document.getElementById('btnJoin');

        inviteInput.addEventListener('input', () => {
            const code = inviteInput.value.trim();
            const isValid = code.length >= 2;

            btnJoin.disabled = !isValid;
            if (isValid) {
                btnJoin.classList.remove('btn-disabled');
                btnJoin.classList.add('btn-join');
            } else {
                btnJoin.classList.add('btn-disabled');
                btnJoin.classList.remove('btn-join');
            }
        });

        document.getElementById('joinForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const inviteCode = inviteInput.value.trim();
            const originalText = btnJoin.innerHTML;

            // Loading 狀態
            btnJoin.disabled = true;
            btnJoin.innerHTML = '<span class="spinner-border spinner-border-sm"></span> 加入中...';

            try {
                const response = await fetch('/api/timewindow/join', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ inviteCode: inviteCode })
                });

                if (response.ok) {
                    const data = await response.json();
                    window.location.href = `/Match/Preferences/${data.groupId}`;
                } else {
                    const error = await response.json();
                    alert("加入失敗：" + (error.message || "邀請碼無效"));
                    btnJoin.disabled = false;
                    btnJoin.innerHTML = originalText;
                }
            } catch (err) {
                console.error(err);
                alert("連線錯誤");
                btnJoin.disabled = false;
                btnJoin.innerHTML = originalText;
            }
        });
    </script>
}